modules = ["python-3.11", "postgresql-16", "python3"]

[nix]
channel = "stable-24_05"
packages = ["gcc", "glibcLocales", "ocl-icd", "opencl-headers"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_packages"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ML Training System"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Professional Trading UI"

[[workflows.workflow]]
name = "install_packages"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add pandas plotly scikit-learn pandas-ta requests websocket-client"

[[workflows.workflow]]
name = "ML Training System"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_autonomous_training.py train"

[[workflows.workflow]]
name = "Professional Trading UI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python modern_trading_app.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
