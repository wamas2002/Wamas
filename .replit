modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "ocl-icd", "opencl-headers", "gcc"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_packages"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ML Training System"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add pandas_ta plotly scikit-learn requests websocket-client && streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "install_packages"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add pandas plotly scikit-learn pandas-ta requests websocket-client"

[[workflows.workflow]]
name = "ML Training System"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_autonomous_training.py train"

[[ports]]
localPort = 5000
externalPort = 80
